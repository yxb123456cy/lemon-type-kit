{
  "name": "@lemondev/type-kit",
  "version": "0.1.5",
  "description": "A comprehensive utility library for TypeScript projects, powered by Lemon Dev.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "rslib build",
    "build:doctor": "cross-env RSDOCTOR=true npm run build",
    "check": "biome check --write",
    "dev": "rslib build --watch",
    "format": "biome format --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "commit": "git-cz",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "prepare": "husky"
  },
  "keywords": [
    "typescript",
    "utils",
    "library",
    "helper",
    "common",
    "array",
    "string",
    "number",
    "date"
  ],
  "author": "Lemon Dev",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@microsoft/api-extractor": "^7.55.2",
    "@rsdoctor/rspack-plugin": "^1.3.16",
    "@rslib/core": "^0.18.4",
    "@types/node": "^24.10.1",
    "cross-env": "^10.1.0",
    "cz-git": "^1.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "biome check --write",
      "biome format --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false
}
